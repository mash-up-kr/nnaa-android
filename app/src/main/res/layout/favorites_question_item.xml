<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/favorites_cardview"
        android:layout_width="359dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ffffff"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="true">

        <CheckBox
            android:id="@+id/check_box_favorites"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:button="@drawable/favorites_check_box"/>

        <TextView
            android:id="@+id/txt_favorites_question"
            android:layout_width="225dp"
            android:layout_height="16dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:text="로또에 당첨된다면 하고 싶은 일이 있나요?"
            android:textColor="#2d2e35"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
